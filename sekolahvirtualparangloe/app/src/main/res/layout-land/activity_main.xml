<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/gabunglogobulatputih" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonheaderdashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="-5dp"
            android:background="@drawable/headersoftblue"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="SEKOLAH VIRTUAL PARANGLOE"
            android:textColor="#2196F3"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout19">

        <LinearLayout
            android:id="@+id/linearLayout20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout19"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout19">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView8"
                    android:layout_width="145dp"
                    android:layout_height="225dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/styleheaderdashboard"
                    app:cardBackgroundColor="#2196F3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonstyle"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/bgbulatputih"
                            android:padding="7dp"
                            android:src="@drawable/ic_schooldsb" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"
                            android:background="@color/colorlightgrayline" />

                        <Button
                            android:id="@+id/btnsekolah"
                            android:layout_width="110dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/bgbulatsoftblue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="   SEKOLAH   "
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="145dp"
                    android:layout_height="225dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/styleheaderdashboard"
                    app:cardBackgroundColor="#2196F3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonstyle"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/bgbulatputih"
                            android:padding="9dp"
                            android:src="@drawable/ic_aboutme" />

                        <View
                            android:layout_width="150dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"
                            android:background="@color/colorlightgrayline" />

                        <Button
                            android:id="@+id/btntentang"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/bgbulatsoftblue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="  TENTANG   "
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView10"
                    android:layout_width="145dp"
                    android:layout_height="225dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonstyle"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/bgbulatputih"
                            android:padding="7dp"
                            android:src="@drawable/ic_helpmee" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"
                            android:background="@color/colorlightgrayline" />

                        <Button
                            android:id="@+id/btnbantuan"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/bgbulatsoftblue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="   BANTUAN   "
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView9"
                    android:layout_width="145dp"
                    android:layout_height="225dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonstyle"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/bgbulatputih"
                            android:padding="10dp"
                            android:src="@drawable/ic_exitapp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"
                            android:background="@color/colorlightgrayline" />

                        <Button
                            android:id="@+id/btnkeluar"
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/bgbulatsoftblue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="       KELUAR       "
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


             </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

